<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="paneConfirmation" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.invoicingapp.javafx.ConfirmationDialogController">
    <children>
        <Label fx:id="lblMessage" text="Are you sure?" />
        <HBox alignment="CENTER" spacing="20">
            <children>
                <Button fx:id="btnConfirm" onAction="#onClicConfirm" text="Confirm" />
                <Button fx:id="btnCancel" onAction="#onClicCancel" text="Cancel" />
            </children>
        </HBox>
    </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>

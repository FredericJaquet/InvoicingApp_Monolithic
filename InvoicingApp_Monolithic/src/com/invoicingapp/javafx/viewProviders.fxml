<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="paneProviders" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@viewproviders.css"xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.invoicingapp.javafx.ViewProvidersController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onClicEnabled" text="Habilitados">
               <HBox.margin>
                  <Insets right="25.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClicDisabled" text="No Habilitados">
               <HBox.margin>
                  <Insets right="25.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClicAll" text="Todos" />
         </children>
         <VBox.margin>
            <Insets bottom="15.0" top="15.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tableProviders" prefHeight="300.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="columnComName" prefWidth="75.0" text="Nombre Comercial" />
            <TableColumn fx:id="columnVATNbr" prefWidth="75.0" text="CIF" />
            <TableColumn fx:id="columnEmail" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="ColumnWeb" prefWidth="75.0" text="Web" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCreateProvider" text="Nuevo Proveedor" />
            <Button mnemonicParsing="false" onAction="#onSeeDetails" text="Ver detalles">
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="25.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>

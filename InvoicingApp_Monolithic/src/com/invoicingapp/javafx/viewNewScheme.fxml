<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="paneNewScheme" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.invoicingapp.javafx.ViewNewSchemeController">
   <children>
      <Label fx:id="labelTitle" minHeight="-Infinity" text="Crear un Esquema de facturación" wrapText="true">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="labelIntro" minHeight="-Infinity" text="Introduzca aquí los detalles del esquema nuevo" wrapText="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets right="25.0" />
         </VBox.margin>
         <font>
            <Font name="Arial" size="14.0" />
         </font>
         <padding>
            <Insets bottom="15.0" />
         </padding>
      </Label>
      <GridPane fx:id="paneScheme" vgap="25.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Nombre de Esquema">
               <GridPane.margin>
                  <Insets top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="fieldSchemeName" promptText="Obligatorio" stylesheets="@viewcreatecustomer.css" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>
            <Label text="Precio Base" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="fieldPrice" promptText="Obligatorio" stylesheets="@viewnewscheme.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Idioma Origen" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="fieldSourceLanguage" stylesheets="@viewcreatecustomer.css" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>
            <Label text="Idioma Destino" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="fieldTargetLanguage" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Sector" GridPane.rowIndex="4">
               <GridPane.margin>
                  <Insets top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="fieldFieldName" stylesheets="@viewcreatecustomer.css" GridPane.rowIndex="5">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>
            <Label text="Unidades" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <GridPane.margin>
                  <Insets top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="fieldUnits" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <FlowPane fx:id="PaneTableScheme" alignment="CENTER" columnHalignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.rowSpan="3">
               <children>
                  <TableView fx:id="tableSchemeLine" editable="true" prefHeight="100.0" prefWidth="350.0">
                     <columns>
                        <TableColumn fx:id="columnDescription" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="275.0" text="Descripción" />
                        <TableColumn fx:id="columnDiscount" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="75.0" text="Descuento" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </TableView>
               </children>
            </FlowPane>
         </children>
      </GridPane>
      <HBox fx:id="boxLines" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="fieldDescription" prefWidth="270.0" promptText="Nueva línea">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <TextField fx:id="fieldDiscount" onKeyPressed="#commitLine" prefWidth="75.0" promptText="Descuento" stylesheets="@viewnewscheme.css">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </HBox>
      <HBox fx:id="paneFootScheme" alignment="BOTTOM_RIGHT" prefHeight="250.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onClicCancel" text="Cancelar">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClicSave" text="Guardar" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="25.0" right="25.0" top="50.0" />
   </padding>
</VBox>
